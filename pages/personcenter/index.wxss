/**index.wxss**/

.userinfo-container {
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    width: 100%;
    background-color: #fff;
}

.userinfo {
    border-radius: 12rpx;
    background-color: #f24;
    padding-left: 40rpx;
    padding-right: 40rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    width: 80%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.container {
    background-color: #eee;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    border-radius: 50%;
}

.userinfo-info {
    margin-left: 18rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex-grow: 1;
}

.userinfo-info-nickname {
    font-size: 32rpx;
}

.userinfo-info-id {
    margin-top: 8rpx;
    font-size: 26rpx;
    margin-bottom: 8rpx;
}

.userinfo-manager {
    font-size: 26rpx;
}

.order {
    padding: 26rpx;
    background-color: #fff;
    width: 100%;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
}

.order-item {
    display: flex;
    flex-grow: 1;
    flex-direction: column;
    align-items: center;
}

.order-item-icon {
    margin-bottom: 10rpx;
}

.account-num {
    font-size: 26rpx;
    color: #f00;
    font-weight: 700;
}

.goods-history {
    font-size: 26rpx;
    color: #000;
    font-weight: 700;
}

.other {
    padding: 26rpx;
    background-color: #fff;
    width: 100%;
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    font-size: 26rpx;
}

.other-item {
    width: 25%;
    display: flex;
    flex-direction: column;
    align-items: center;
}